# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Jaari RAG API
VERSION=1.0.0
DESCRIPTION=Agriculture Intelligence Platform API

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://jaari_user:jaari_password@localhost:5432/jaari_rag_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Default Admin User (created at startup if no admin exists)
DEFAULT_ADMIN_EMAIL=admin@xelkoomai.sn
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin@221
DEFAULT_ADMIN_FULL_NAME=Administrateur Principal

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100000000  # 100MB
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.md

# LLM & RAG Configuration (from original project)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=180
OLLAMA_KEEP_ALIVE=10m

# Embeddings
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DEVICE=cpu
EMBEDDINGS_CACHE_DIR=./cache/embeddings

# Vector Store
VECTORSTORE_TYPE=faiss
VECTORSTORE_PATH=./data/vectorstore
CHUNK_SIZE=500
CHUNK_OVERLAP=100
SEARCH_K=4

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Monitoring
PROMETHEUS_ENDPOINT=/metrics
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email (optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Storage (S3 compatible - optional)
USE_S3=False
S3_BUCKET=jaari-rag-documents
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
