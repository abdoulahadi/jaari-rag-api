# ================================================
# CONFIGURATION PRODUCTION - DOCKER
# ================================================
# IMPORTANT: Changez toutes les valeurs par défaut avant le déploiement !

# Sécurité JWT (OBLIGATOIRE À CHANGER)
SECRET_KEY=your-production-secret-key-change-this-immediately

# Base de données PostgreSQL
POSTGRES_PASSWORD=your-secure-postgres-password

# Configuration Admin par défaut (CHANGEZ IMMÉDIATEMENT)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourSecureAdminPassword123!
ADMIN_FULL_NAME=Administrateur Principal

# Domaine et CORS (ajustez selon votre domaine)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Optionnel: Configuration SMTP pour les emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optionnel: Configuration S3 pour le stockage
USE_S3=false
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
