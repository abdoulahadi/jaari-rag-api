# Configuration optimisée pour Jaari RAG Engine
# Paramètres ajustés pour les meilleures performances

# === LLM Configuration ===
OLLAMA_MODEL=llama3.1:latest
LLM_TEMPERATURE=0.1
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=180
OLLAMA_KEEP_ALIVE=5m
LLM_MAX_TOKENS=2000
LLM_CONTEXT_WINDOW=4096

# === Vector Store Configuration ===
VECTORSTORE_PATH=data/vectorstore
CHUNK_SIZE=1500
CHUNK_OVERLAP=300
SEARCH_K=8
SCORE_THRESHOLD=0.1
RERANK_K=5
FAISS_INDEX_TYPE=IVF
BATCH_SIZE=2000

# === Cache Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# === Performance Configuration ===
MAX_WORKERS=4
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# === Document Processing ===
CORPUS_DIR=data/corpus
SUPPORTED_EXTENSIONS=.txt,.pdf,.docx,.md
MAX_FILE_SIZE=50MB

# === Monitoring Configuration ===
ENABLE_PROMETHEUS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# === Security Configuration ===
API_KEY=your_secure_api_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === TTS Configuration (optionnel) ===
TTS_ENABLED=true
TTS_VOICE_MODEL=tts_models/multilingual/multi-dataset/your_tts
TTS_CACHE_DIR=data/tts_cache

# === Google Cloud Configuration (optionnel) ===
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id
